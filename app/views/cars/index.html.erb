<div class="btn">
<span class="btn-create"> <%= link_to "Create a card", new_car_path %> </span>
</div>
<div class="cards">
  <ul>
    <% @cars.each do |car| %>
      <div class="card-product">
        <%# <img src="https://picsum.photos/200/300?grayscale" /> %>
        <img src="https://api.lorem.space/image/car?w=150&h=150" />
        <div class="card-product-infos">
          <h2><%= car.brand %></h2>
          <p> <%= car.description %></p>
        </div>
      </div>
    <% end %>
  </ul>
</div>
