<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Rent your car</h1>
        <%= simple_form_for(@car) do |f| %>
          <%= f.input :brand %>
          <%= f.input :fuel %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      <div>
    <div>
  <div>
</div>
<%= link_to "back", cars_path, class:"btn btn-primary mt-3" %>
